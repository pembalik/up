name: Scheduled nomorbet.txt Commit

on:
  workflow_dispatch:

jobs:
  commit-and-push:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout kode
        uses: actions/checkout@v3

      - name: Salin nomorbet.txt baru ke root
        run: |
          cp update_staged/nomorbet.txt nomorbet.txt
          git config user.name "radit"
          git config user.email "radit@mcoel.com"
          git add nomorbet.txt
          git commit -m "Scheduled update for nomorbet.txt at 23:00 WIB"
          git push origin main
